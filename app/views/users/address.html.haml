.user-header
  =render "new-header-progress"
  .user-header-address
    =render "new-header-progress-1"

.single
  .single__container 
    %h2.head　発送元・お届け先住所入力
  .single__content
    .single__content__groupform
      %label  お名前
      %span.form-require 必須
      %input.input-default{name: "name", placeholder: "例) 山田", type: "text", value: ""}
    .single__content__groupform
      %label  お名前　カナ
      %span.form-require 必須
      %input.input-default{name: "kana", placeholder: "例) 彩", type: "text", value: ""} 
    .single__content__groupform
      %label  郵便番号
      %span.form-require 必須
      %input.input-default{name: "post", placeholder: "例) 123-4567", maxlength: "8"}   
    .single__content__groupform
      %label  都道府県
      %span.form-require 必須
      %select{id: "month", class: "input-default"}
        %option{value: "hokkaido"} 神奈川県 
    .single__content__groupform
      %label  市町村
      %span.form-require 必須
      %input.input-default{name: "city", placeholder: "横浜市港北区", value: ""}   
    .single__content__groupform
      %label  番地
      %span.form-require 必須
      %input.input-default{name: "banchi", placeholder: "青山1-1-1", value: ""}   
    .single__content__groupform
      %label  建物名
      %span.norequire 任意
      %input.input-default{name: "buildname", placeholder: "柳ビル103", value: ""}  
    .single__content__groupform
      %label  電話
      %span.norequire 任意
      %input.input-default{name: "tel", placeholder: "09012345678", value: ""} 
      =link_to pay_users_path do
        %button.next{type: "submit"} 次へ進む

=render "new-footer"